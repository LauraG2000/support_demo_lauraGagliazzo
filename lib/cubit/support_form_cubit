import 'package:bloc/bloc.dart';

class SupportFormCubit extends Cubit<SupportFormState> {
  SupportFormCubit() : super(const SupportFormState());

  // Aggiorna il testo SOLO se <= 10 caratteri
  void updateQuestion(String text) {
    if (text.length > 10) return;  // rifiuta lâ€™inserimento

    emit(state.copyWith(question: text));
  }

  // Aggiorna sezione
  void updateSection(String? section) {
    emit(state.copyWith(selectedSection: section));
  }
}
